---
import ProjectsCards from "./ProjectCard.astro"
const {title} = Astro.props;
---


<section id="projects" class="py-5">
    <div class="container">        
        <h2 class="text-center mb-5">{title}</h2>
        <ProjectsCards />        
    </div>
</section>

<style>
    #projects {        
        background-color: rgb(238, 238, 241);            
        padding: 6.5rem 15rem 6.5rem 15rem;
    }

    @media (max-width: 1240px) {
        #projects {
            padding: 6.5rem 15rem 6.5rem 15rem;
        }
    }

    @media (max-width: 1100px) {
        #projects {
            padding: 6.5rem 10rem 6.5rem 10rem;
        }
    }

    @media (max-width: 890px) {
        #projects {
            padding: 6.5rem 5rem 6.5rem 5rem;
        }
    }

    @media (max-width: 600px) {
        #projects {
            padding: 6.5rem 1rem 6.5rem 1rem;
        }
    }

</style>