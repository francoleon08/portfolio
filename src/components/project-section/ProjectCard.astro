---
import Projects from "../../data/projects.json";
---

{
    Projects.map(project => (
        <div class="row d-flex justify-content-between align-items-center mb-5">
            <div class="col-md-6 img-project-container">
                <div class="img-wrapper">
                    <img
                        class="img-project"
                        src={project.urlImg}
                        alt="Placeholder"
                        class="img-fluid img-project"
                    />  
                    {project.inProgress && (<span class="badge">En desarrollo</span>)}                  
                </div>
            </div>
            <div class="col-md-6 py-3">
                <h3 class="title-project">{project.title}</h3>
                <p class="description-project text-justify">{project.description}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="tec-project">{project.technologies}</p>
                    <div>
                        {project.icons.map(icon => (
                            <a href={icon.url} target="_blank" class="project-icon">
                                <i class={icon.iconClass}></i>
                            </a>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    ))
}

<style>
    .img-project {
        width: 500px;
        height: 300px;
        box-shadow: 0 16px 16px rgba(0, 0, 0, 0.3);
    }

    .img-wrapper {
        position: relative;
        display: inline-block;
    }

    .badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background-color: rgba(245, 0, 79, 0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 20px;
        font-weight: 600;
    }

    .title-project {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
    }

    .description-project {
        font-weight: 400;
        color: #6c757d;
    }

    .img-project {
        border-radius: 10px;
    }

    .tec-project {
        font-size: 1.2rem;
        font-weight: 800;
        color: #F5004F;
    }

    .project-icon {
        font-size: 2.5rem;
        color: #343a40;
        text-decoration: none;
        margin-left: 10px;
    }

    .project-icon i {
        transition: color 0.3s ease;
    }

    .project-icon i:hover {
        color: #7C00FE;
    }

    @media (max-width: 550px) {
        .img-project {
            width: 450px;
            height: auto;
        }

        .img-project-container {
            display: flex;
            justify-content: center;
        }
    }

    @media (max-width: 500px) {
        .img-project {
            width: 400px;
            height: auto;
        }
    }

    @media (max-width: 430px) {
        .img-project {
            width: 350px;
            height: auto;
        }
    }

    @media (max-width: 400px) {
        .img-project {
            width: 300px;
            height: auto;
        }
    }
</style>