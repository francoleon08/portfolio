---
import ContactButton from "./ContactButton.astro"
---

<nav class="navbar navbar-expand-lg py-4 px-3">    
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <a href="/" class="header-logo">
                <div>
                    <svg style="color: #e84142; width: 50px; height: 50px;" xmlns="http://www.w3.org/2000/svg"
                    width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                    stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
                        <polyline points="16 18 22 12 16 6"></polyline>
                        <polyline points="8 6 2 12 8 18"></polyline>
                    </svg>   
                </div>
                <div class="header-logo-span">
                    <span>Franco Leon</span>             
                </div>
            </a>
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <svg width="50" height="50" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4 6h16v2H4V6zm0 4h16v2H4v-2zm0 4h16v2H4v-2z" />
            </svg>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#conoceme">Conoceme</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#skills">Skills</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#projects">Proyectos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="downloadLink">CV</a>
                </li>
                <li class="nav-item ps-lg-4">
                    <ContactButton 
                        text="Contacto"
                        section="#contact"
                    />
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
    const downloadLink = document.getElementById('downloadLink');
    if (downloadLink) {
        downloadLink.addEventListener('click', function(event) {
            event.preventDefault();
            const pdfUrl = 'https://github.com/francoleon08/francoleon08/raw/main/CV.pdf';
            const link = document.createElement('a');
            link.href = pdfUrl;
            link.download = 'CV_Franco_Leon.pdf';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });
    }

    let lastScrollTop = 0;
    const navbar = document.querySelector(".navbar") as HTMLElement;

    window.addEventListener("scroll", () => {
        let scrollTop = window.scrollY || document.documentElement.scrollTop;

        if (window.scrollY > 500) {
            navbar.classList.add("scrolled");
        } else {
            navbar.classList.remove("scrolled");
        }

        if (scrollTop > lastScrollTop) {        
            navbar.style.transform = "translateY(-100%)";
        } else {        
            navbar.style.transform = "translateY(0)";
        }

        lastScrollTop = scrollTop;
    });

</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style> 

    .header-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;        
        font-size: 1.5rem;
        font-weight: 700;
        color: #e84142;            
    }

    .header-logo-span {
        margin-top: 2px;
    }

    .navbar {
        update-project-astro        
        border-bottom: 2px solid rgb(71, 70, 70, 0.5);
        position: fixed;
        width: -webkit-fill-available;        
        transform: translateY(0);
        transition: background-color 0.3s ease, transform 0.3s ease-in-out;
        background-color: transparent;
        z-index: 1000;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    }

    .navbar.scrolled {
        background-color: rgb(21, 28, 43);
    }

    .nav-item *,
    .navbar-brand {
        color: #d6d3d3;
        font-weight: 500;
        font-size: larger;
        transition: all 0.15s;
    }

    .nav-item a:hover {
        color: white;
    }

    .navbar-toggler {
        background-color: transparent;
        border: none;
        border-radius: 100px;
        transition: 0.2s;
    }

    .navbar-toggler svg {
        color: #e84142;
        transition: 0.2s;        
    }

    .navbar-toggler svg:hover {
        color: white;
    }

    .navbar-toggler:hover {
        background-color: #e84142;
    }

    @media (max-width: 991px) {
        .navbar-nav {
            text-align: center;
            background-color: rgb(17 24 39);
        }

        .header-logo-span {
            display: none;
        }
    }
</style>