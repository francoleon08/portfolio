<style is:global>
	body {
    font-family: "Nunito", sans-serif;
    box-sizing: border-box;
	}

	html, body { 
		overflow-x: clip; 
	}

	h2 {
		font-size: 3rem;
		font-weight: 700;
		color: #7C00FE;
	}

	h3 {
		font-size: 2rem;
		font-weight: 600;
		color: #6c757d;
	}

	p {
		margin: 0;
	}

	p,
	label,
	input {
		font-weight: 500;
		color: #6c757d;
		font-size: 1.3rem;
	}

	textarea {
		resize: none;
	}

</style>